<h2>Записатися</h2>

<form action="/visit" method="POST" role="form">
<label>Виберіть вашого перукаря:</label>
<select name="barber" class="form-control">
  <!-- Задання номер 3 -->
<% @barbers.each do |item| %>
  <option <%= @barber == item.name ? 'selected' : '' %>><%= item.name%></option>
<% end %>
</select>
<!-- Задання номер 3 завершення -->
<br />
  <div class="form-group">
    <label>Введіть своє ім'я:</label>
    <input type="text" name="client[name]" class="form-control" placeholder="Введіть тут своє ім'я" value="<%= @c.name %>">
  </div>

  <div class="form-group">
    <label>Введіть свій телефон:</label>
  <input type="number" name="client[phone]" class="form-control" placeholder="Введіть тут свій номер телефону" value="<%= @c.phone %>">
  </div>

  <div class="form-group">
    <label>Коли Вас чекати? </label>
    <input type="datetime-local" name="client[datestamp]" class="form-control" placeholder="Введіть дату й час свого візиту" value="<%= @c.datestamp %>">
  </div>
  <div class="form-group">
    <label>Колір Вашого волосся буде: </label>
    <select name="client[color]" id="color">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#e1e1e1">Gray</option>
      <option value="#dbadff">Purple</option>
</select>
  </div>

  <button type="submit" class="btn btn-primary">Записатися</button>
</form>
<script type="text/javascript">
  $('#color').simplecolorpicker();
</script>


<br /><h3><%=@message%></h3>